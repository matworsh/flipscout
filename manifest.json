{
  "manifest_version": 3,
  "name": "FlipScout - eBay Reseller Intelligence",
  "version": "1.0.0",
  "description": "Instantly see sold prices, averages & flip score for any eBay item.",
  "permissions": ["storage", "activeTab", "scripting", "alarms"],
  "host_permissions": ["https://*.ebay.com/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [{
    "matches": ["https://*.ebay.com/*"],
    "js": ["content.js"],
    "css": ["sidebar.css"],
    "run_at": "document_idle"
  }],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
